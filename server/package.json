{
  "name": "eink-server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm run dev:templates & tsx watch src/index.ts",
    "start": "node dist/src/index.js",
    "pw:install": "playwright install chromium",
    "dev:templates": "esbuild templates/weather/page.ts --bundle --format=esm --platform=browser --target=es2020 --outfile=templates/weather/page.js --watch",
    "build": "npm run build:server && npm run build:templates && npm run copy:templates",
    "build:server": "tsc -p tsconfig.json",
    "build:templates": "esbuild templates/weather/page.ts --bundle --format=esm --platform=browser --target=es2020 --outfile=dist/templates/weather/page.js",
    "copy:templates": "tsx scripts/copy-templates.ts"
},
  "dependencies": {
    "chart.js": "^4.5.1",
    "express": "^4.19.2",
    "playwright": "^1.49.0",
    "pngjs": "^7.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.2",
    "@types/pngjs": "^6.0.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
